<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#F8F8F8"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:orientation="horizontal">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/photoImageView"
                android:layout_width="93dp"
                android:layout_height="93dp"
                app:shapeAppearanceOverlay="@style/backgroundImage"
                android:layout_gravity="center"

                android:src="@drawable/image"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="12dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/nameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Najeia Tammous"
                    android:layout_marginBottom="8dp"
                    android:textColor="@color/fontColor"
                    android:textSize="16sp"
                    android:fontFamily="@font/dmsans_bold" />

                <TextView
                    android:id="@+id/rateTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Engineer"
                    android:layout_marginBottom="8dp"
                    android:textColor="@color/fontColor"
                    android:fontFamily="@font/dmsans_medium"
                    android:textSize="12sp" />


                   <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginBottom="8dp"
                   android:orientation="horizontal">

                   <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_location" />

                <TextView
                    android:id="@+id/locationTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UK"
                    android:layout_marginStart="4dp"
                    android:fontFamily="@font/dmsans_regular"
                    android:textSize="13sp" />

                   </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <TextView
                    android:id="@+id/reviewsTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="(150 Reviews)"
                    android:textColor="@color/fontColor"
                    android:fontFamily="@font/dmsans_regular"
                    android:textSize="12sp"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/rate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="4.5"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/fontColor"
                    android:fontFamily="@font/dmsans_medium"
                    android:textSize="12sp" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_marginStart="4dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_starrate" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/hr"
                    android:layout_width="38dp"
                    android:layout_height="20dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/red_background"
                    android:fontFamily="@font/dmsans_regular"
                    android:text="3 hr"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/nationality"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/dmsans_medium"
                    android:text="Palestinian"
                    android:textColor="@color/fontColor"
                    android:textSize="12sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/days"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/dmsans_regular"
                    android:text="5 Days ago"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>